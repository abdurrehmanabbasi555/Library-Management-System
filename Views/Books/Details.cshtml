@model LibrarySystem.Models.Book

<h2>Book Details</h2>

<dl class="row">
    <dt class="col-sm-2">Book ID</dt>
    <dd class="col-sm-10">@Model.BookID</dd>

    <dt class="col-sm-2">Title</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">Author ID</dt>
    <dd class="col-sm-10">@Model.AuthorID</dd>

    <dt class="col-sm-2">Author Name</dt>
    <dd class="col-sm-10">@Model.AuthorName</dd>

    <dt class="col-sm-2">Price</dt>
    <dd class="col-sm-10">@Model.BookPrices</dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.BookID" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>