@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - Library Management System</title>
        <link rel="stylesheet" href="~/css/site.css" />
    </head>
    <body>
        <div class="dashboard-container">
            <!-- Sidebar -->
            <div class="sidebar">
                <div class="sidebar-header">
                    <h2>LMS</h2>
                </div>
                <ul class="sidebar-nav">
                    <li><a asp-controller="Books" asp-action="Index">DASHBOARD</a></li>
                    <li><a asp-controller="Books" asp-action="Index">BOOKS</a></li>
                    <li><a asp-controller="Members" asp-action="Index">MEMBERS</a></li>
                </ul>

                <!-- Login/Logout Section -->
                <div class="logout-section" style="margin-top: auto; padding: 20px; border-top: 1px solid #333;">
                    @if (SignInManager.IsSignedIn(User))
                {
                    <p style="color: #fff; margin-bottom: 10px; font-size: 14px;">
                        Logged in as:<br />
                        <strong>@User.Identity.Name</strong>
                    </p>
                    <form method="post" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Books")">
                        <button type="submit" class="logout-btn" style="width: 100%; padding: 10px; background: #e74c3c; color: white; border: none; cursor: pointer; border-radius: 4px; font-weight: bold;">
                            LOGOUT
                        </button>
                    </form>
                }
                else
                {
                    <a asp-area="Identity" asp-page="/Account/Login" class="logout-btn" style="display: block; text-align: center; padding: 10px; background: #3498db; color: white; text-decoration: none; border-radius: 4px; margin-bottom: 10px; font-weight: bold;">
                        LOGIN
                    </a>
                    <a asp-area="Identity" asp-page="/Account/Register" class="logout-btn" style="display: block; text-align: center; padding: 10px; background: #2ecc71; color: white; text-decoration: none; border-radius: 4px; font-weight: bold;">
                        REGISTER
                    </a>
                }
                </div>
            </div>

            <!-- Main Content -->
            <div class="main-content">
                @RenderBody()
            </div>
        </div>

        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>
